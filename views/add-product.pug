extends layout

block content
  .container
    h2 
      span.title-emoji ➕
      span.title-text Ajouter un nouveau produit
    form.product-form(action="/add", method="POST")
      .form-group
        label(for="society") 🏢 Société :
        input#society(type="text", name="society", required, placeholder="Nom de la société")
      
      .form-group
        label(for="price") 💰 Prix (€) :
        input#price(type="number", step="0.01", name="price", required, placeholder="0.00")
      
      .form-group
        label(for="qty") 📦 Quantité en stock :
        input#qty(type="number", name="qty", required, placeholder="0")
      
      .form-group
        label(for="year") 📅 Année :
        input#year(type="number", name="year", required, placeholder="2024")
      
      .form-group
        label(for="size_h") 📏 Hauteur :
        input#size_h(type="number", step="0.01", name="size_h", required, placeholder="0.00")
      
      .form-group
        label(for="size_w") 📐 Largeur :
        input#size_w(type="number", step="0.01", name="size_w", required, placeholder="0.00")
      
      .form-group
        label(for="size_uom") 📏 Unité de mesure :
        select#size_uom(name="size_uom", required)
          option(value="cm") Centimètres (cm)
          option(value="in") Pouces (in)
      
      .form-group
        label
          input(type="checkbox", name="sale")
          |  🔥 Mettre en promotion
      
      .form-actions
        button.btn.btn-primary(type="submit") 
          span ✅ Ajouter le produit
        a.btn.btn-secondary(href="/") 
          span ❌ Annuler
